<body>
  <div class="zone">
    <h3>Entrée HEXA :</h3>
    <textarea id="hexInput" placeholder="Exemple : 0x3 0x7 0x5"></textarea><br>
    <button onclick="convertir()">Traduire</button>
  </div>

  <div class="zone">
    <h3>Sortie BINAIRE :</h3>
    <textarea id="binOutput" readonly></textarea>
  </div>

  <script>
    function convertir() {
      const input = document.getElementById("hexInput").value;
      const hexArray = input.trim().split(/\s+/);
      const binArray = hexArray.map(val => {
        let clean = val.toLowerCase().startsWith("0x") ? val.slice(2) : val;
        if (!/^[0-9a-f]+$/i.test(clean)) return "❌";
        return parseInt(clean, 16).toString(2).padStart(3, '0');
      });
      document.getElementById("binOutput").value = binArray.join(' ');
    }
  </script>
</body>
